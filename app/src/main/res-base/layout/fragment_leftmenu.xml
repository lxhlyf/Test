<?xml version="1.0" encoding="utf-8"?>
<com.test.view.SlidingMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/left_menu_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="70dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/left_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/left_menu_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="145dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="25dp"
            android:text="简言"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/left_menu_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="25dp"
            android:text="如我可爱你，怎会吝啬。如我当离去，不做停留。"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/left_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:cacheColorHint="@color/white" />

</com.test.view.SlidingMenuLayout>