<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="center_vertical"
    android:background="@color/activity_order_text_pressed_night"
    style="@style/Theme.AppCompat.NoActionBar"
    android:paddingTop="4dp"
    android:paddingBottom="2dp">


    <ImageButton
        android:id="@+id/ib_left_icon"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:src="@drawable/ic_tab_home"/>


    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_search_bg_selector"
            android:hint="全网搜索"
            android:text="a"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColorHint="@drawable/tv_search_textcolor_selector"
            android:textColor="@drawable/tv_search_textcolor_selector"
            android:textSize="18sp"
            android:cursorVisible="false"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/tv_search_drawable_selector"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
           />

    </RelativeLayout>




    <ImageButton
        android:id="@+id/ib_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:src="@drawable/ic_sousuokuang"/>


</LinearLayout>